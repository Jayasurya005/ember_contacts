<h1 class="head">New Contact</h1><br>
<form>
<div><label> Name </label>{{input type="text" class="name" placeholder="First Name" value=firstname}}{{input type="text" class="name" id="last" placeholder="Last Name" value=lastname}}</div>
<div><label> Email </label>{{input type="text" value=email}}{{input class="inline" value=message}}</div>
<div><label> Phone </label>{{input type="text" value=phone}}</div>
<div><label> Designation </label>{{input type="text" value=designation}}</div>
<div><label> Department </label>{{input type="text" value=department}}</div>
<div><label> Address Line 1</label>{{textarea type="text" value=address1}}</div>
<div><label> Address Line 2</label>{{textarea type="text" value=address2}}</div>
<div><label> City </label>{{input type="text" value=city}}</div>
<div><label> Pin Code </label>{{input type="text" value=pincode}}</div>
<div><label> State </label>{{input type="text" value=state}}</div>
<div><label> Country </label>{{input type="text" value=country}}</div>
</form>
<button {{action "save"}} class="save">Save</button>
<button class="cancel">Cancel</button>
